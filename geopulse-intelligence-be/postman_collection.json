			"name": "Auth",
			"description": "Authentication, registration, password management, and 2FA",
			"item": [
				{
					"name": "Register",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"const res = pm.response.json();",
									"if (res.data?.accessToken) {",
									"    pm.environment.set('access_token', res.data.accessToken);",
									"    pm.environment.set('refresh_token', res.data.refreshToken);",
									"}",
									"if (res.data?.user?._id) {",
									"    pm.environment.set('user_id', res.data.user._id);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"Test User\",\n    \"email\": \"test@example.com\",\n    \"password\": \"Password123!\",\n    \"confirmPassword\": \"Password123!\"\n}",
							"options": { "raw": { "language": "json" } }
						},
						"url": { "raw": "{{base_url}}/auth/register", "host": ["{{base_url}}"], "path": ["auth", "register"] }
					}
				},
