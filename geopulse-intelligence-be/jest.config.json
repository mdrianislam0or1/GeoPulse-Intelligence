{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "roots": ["<rootDir>/src"],
  "testMatch": ["**/__tests__/**/*.test.ts"],
  "moduleFileExtensions": ["ts", "js"],
  "transform": {
    "^.+\\.ts$": ["ts-jest", {
      "tsconfig": "tsconfig.json"
    }]
  },
  "setupFilesAfterEnv": [],
  "testTimeout": 30000,
  "clearMocks": true,
  "collectCoverageFrom": [
    "src/app/modules/**/*.service.ts",
    "!src/**/*.d.ts"
  ]
}
